!!!5

%head
  %title CallMe App
  %meta{ :charset => "utf-8" }
  %link{ :rel => 'shortcut icon', :href => '/favicon.ico' }
  %link{ :href => '/css/font.css', :rel => 'stylesheet' }
  %link{ :href => '/css/style.css', :rel => 'stylesheet' }
  %script{ :src => 'js/mt.js', :type => 'text/javascript' }
  %script{ :src => 'js/session.js', :type => 'text/javascript' }
  %script{ :src => 'js/index.js', :type => 'text/javascript' }

%body
  .page
    .hello
      %h1 Call<span class='orange'>Me</span> App
      HTML5 p<span class="red">2</span>p video chat application
    .register
      %h4 Registration
      %label Username:
      %input#register_name{ :type => 'text', :name => 'name', :size => 30, :required => true }
      %br/
      %button#register_submit Connect
    .user
      .user_name
        %span.name Anonimous
      .user_status.offline
        .status
          ● offline
    .video.offline
      %video#self{ :autoplay => true }
      %video#interlocutor{ :autoplay => true }
    .footer.ghost
      ©
      %a{ :href => "http://whitebox.io" } Whitebox.io